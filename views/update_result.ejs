<!-- include header -->
<%- include('include/_header')%>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/dashboard"><i class="fas fa-angle-double-left"></i>All Results</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Result</h2>
      <span class="text-light">Use the form below to update Result</span>
    </div>
    <!-- add user form -->
    <form method="POST" id="update_result">
      <div class="new_result">
        <div class="form-group">
          <label for="rollno" class="text-light">Roll No.</label>
          <input type="hidden" name="id" value="<%= result.rollno %>" />
          <input type="text" name="rollno" value="<%= result.rollno %>" />
        </div>
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="text" name="name" value="<%= result.name %>" placeholder="Name" />
        </div>
        <div class="form-group">
          <label for="dateOfBirth class="text-light">Date of Birth</label>
          <input type="date" name="dateOfBirth" value="<%= result.dateOfBirth %>" />
        </div>
        <div class="form-group">
          <label for="score" class="text-light">Score</label>
          <input type="text" name="score" value="<%= result.score %>" />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /main site -->
<!-- include footer -->
<%- include('include/_footer')%>
<!-- /include footer -->
